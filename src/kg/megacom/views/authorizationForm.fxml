<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kg.megacom.controllers.AuthController">
   <children>
      <TextField fx:id="txtLogin" alignment="TOP_LEFT" layoutX="199.0" layoutY="98.0" promptText="Введите логин" style="-fx-border-color: black;">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="199.0" layoutY="161.0" promptText="Введите пароль" style="-fx-border-color: F91A1A;">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnCancel" cancelButton="true" layoutX="315.0" layoutY="225.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="39.0" prefWidth="86.0" text="Отмена" />
      <Button fx:id="btnEnter" defaultButton="true" layoutX="199.0" layoutY="225.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="39.0" prefWidth="86.0" text="Войти" />
   </children>
</AnchorPane>
